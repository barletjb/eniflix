{% extends 'base.html.twig' %}
{% block title %} {{ parent() }} - Catalogie {% endblock %}

{% block body %}
    <h2>Catalogue</h2>
    <table>
        <tr>
            <td>Id</td>
            <td>Nom</td>
            <td>Status</td>
            <td>Vote</td>
            <td>Popularity</td>
            <td>First air date</td>
            <td>Last air date</td>
        </tr>
        {% for serie in series %}
            <tr>
                <td>{{ serie.id }}</td>
                <td>{{ serie.name }}</td>
                <td>{{ serie.status }}</td>
                <td>{{ serie.vote }}</td>
                <td>{{ serie.popularity }}</td>
                <td>{{ serie.firstAirDate|date('d/m/Y') }}</td>
                <td>{{ serie.lastAirDate ? serie.lastAirDate|date('d/m/Y') : "" }}</td>
            </tr>
    {% endfor %}
    </table>

{% endblock %}