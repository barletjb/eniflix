{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Catalogue {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/list.css') }}">
{% endblock %}

{% block body %}
    <div class="uk-container">
        <h2 class="uk-heading-line uk-text-center"><span>Catalogue</span></h2>

        <div class="uk-flex uk-flex-between uk-margin">
            {% if page > 1 %}
                <a class="uk-button uk-button-secondary" href="{{ path('list', {'page' : page - 1}) }}">
                    <span uk-icon="chevron-left"></span> Page précédente
                </a>
            {% endif %}
            {% if page < total_pages %}
                <a class="uk-button uk-button-secondary" href="{{ path('list', {'page' : page + 1}) }}">
                    Page suivante <span uk-icon="chevron-right"></span>
                </a>
            {% endif %}
        </div>

        <div class="uk-overflow-auto uk-margin-top">
            <table class="catalogue-table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Status</th>
                    <th>Genre</th>
                    <th>Vote</th>
                    <th>Popularity</th>
                    <th>First air date</th>
                    <th>Last air date</th>
                    <th>Détail</th>
                </tr>
                </thead>
                <tbody>
                {% for serie in series %}
                    <tr>
                        <td>{{ serie.id }}</td>
                        <td>{{ serie.name }}</td>
                        <td>{{ serie.status }}</td>
                        <td>{{ serie.genre }}</td>
                        <td>{{ serie.vote }}</td>
                        <td>{{ serie.popularity }}</td>
                        <td>{{ serie.firstAirDate|date('d/m/Y') }}</td>
                        <td>{{ serie.lastAirDate ? serie.lastAirDate|date('d/m/Y') : "" }}</td>
                        <td>
                            <a class="uk-button uk-button-primary uk-button-small" href="">
                                <span uk-icon="icon: info"></span> Détail
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="uk-text-center uk-text-muted">Aucune série trouvée.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
